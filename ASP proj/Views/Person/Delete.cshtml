@model Person
@{
    Layout = "_Layout";
}
<h2>Delete Event</h2>
<form method="post" action="@Url.Action("DeleteConfirmed", "Person", new {id = Model.Id})" enctype="multipart/form-data">
    <div>
        <p>Are you sure you want to delete this event?</p>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "Person")" class="btn btn-primary">Cancel</a>
    </div>
</form>